{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <h2 class="text-center my-3">Tasks</h2>
    <p id="token" class="d-none">{{ app.session.get('jwt_token') }}</p>

    <!-- Button trigger modal -->
    <div class="text-center">
        <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#addUserModal">
            Add Task
        </button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addUserModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Task</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-header ">
                    <div class="loader d-none">
                        <div class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                    <div id="modalErrorContainer" class="form__error_container d-none"></div>
                    <div id="modalSuccessContainer" class="form__success_container d-none"></div>
                </div>

                <div class="modal-body">
                    <form action="{{ path('createTask') }}" method="post" id="createTaskForm">
                        <div class="form-group">
                            <label for="taskTitle">Title</label>
                            <input type="text" class="form-control" id="taskTitle" name="title" required>
                        </div>
                        <div class="form-group">
                            <label for="taskPriority">Task priority</label>
                            <input class="form-control" type="number" id="taskPriority" name="priority" required>
                        </div>

                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" name="description" id="description" required></textarea>
                        </div>

                        <div class="form-group">
                            <label for="username">Assign user</label>
                            <select class="form-control" name="username" id="username">
                                <option></option>
                                {% for user in users %}
                                    <option value="{{ user.username }}">{{ user.username }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="addTaskButton" class="btn btn-primary">Add task</button>
                </div>
            </div>
        </div>
    </div>

    <div id="errorContainer" class="justify-content-center alert alert-danger mb-3 d-none"></div>
    <div id="successContainer" class="justify-content-center alert alert-success mb-3 d-none"></div>
    <div id="infoContainer" class="justify-content-center alert alert-info mb-3 d-none"></div>

    <div id="tasksContainer">
        <div class="row">
            <div id="todo" class="col-sm-4">
                <div class="loader">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
            <div id="pending" class="col-sm-4">
                <div class="loader">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
            <div id="done" class="col-sm-4">
                <div class="loader">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('tasks') }}
{% endblock %}