{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <h2 class="text-center mt-5">Add task</h2>
    <p id="token" class="d-none">{{ app.session.get('jwt_token') }}</p>

    <form action="{{ path('createTask') }}" method="post" id="createTaskForm">
        <div class="form-group">
            <label for="taskTitle">Title</label>
            <input type="text" class="form-control" id="taskTitle" name="title">
        </div>
        <div class="form-group">
            <label for="taskPriority">Task priority</label>
            <input class="form-control" type="number" id="taskPriority" name="priority">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" name="description" id="description"></textarea>
        </div>

        <div class="form-group">
            <label for="username">Assign user</label>
            <select class="form-control" name="username" id="username">
                <option></option>
                {% for user in users %}
                    <option value="{{ user.username }}">{{ user.username }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <button class="btn btn-primary" type="submit">Add task</button>
            <span class="danger alert-danger" id="error"></span>
            <span class="success alert-success" id="success"></span>
        </div>
    </form>

    <h2 class="text-center">Tasks</h2>
    <div id="errorContainer" class="justify-content-center alert alert-danger mb-3 d-none"></div>
    <div id="successContainer" class="justify-content-center alert alert-success mb-3 d-none"></div>
    <div id="tasksContainer">
        <div class="row">
            <div id="todo" class="col-sm-4">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
            <div id="pending" class="col-sm-4">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
            <div id="done" class="col-sm-4">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('tasks') }}
{% endblock %}