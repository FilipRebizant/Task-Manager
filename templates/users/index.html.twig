{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Users</h1>


    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Create User
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-header ">
                    <div id="errorContainer" class="justify-content-center alert alert-danger mb-3 d-none"></div>
                    <div id="successContainer" class="justify-content-center alert alert-success mb-3 d-none"></div>
                </div>

                <div class="modal-body">
                    <form action="">

                        <form>
                            <div class="form-group">
                                <label for="usernameInput">Username</label>
                                <input type="text" class="form-control" id="usernameInput" placeholder="Username">
                            </div>

                            <div class="form-group">
                                <label for="emailInput">Email</label>
                                <input type="email" class="form-control" id="emailInput" placeholder="Enter email">
                            </div>

                            <div class="form-group">
                                <label for="passwordInput1">Password</label>
                                <input type="password" class="form-control" id="passwordInput1" placeholder="Password">
                            </div>

                            <div class="form-group">
                                <label for="passwordInput2">Re-type Password</label>
                                <input type="password" class="form-control" id="passwordInput2" placeholder="Re-type Password">
                            </div>
                        </form>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="addUserButton" class="btn btn-primary">Create User</button>
                </div>
            </div>
        </div>
    </div>

    <div id="usersContainer">
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>
    <p class="d-none" id="access_token">{{ access_token }}</p>
    <p class="alert" id="requestInfoContainer"></p>
    <button id="refreshTokenButton" class="d-none btn btn-primary">Refresh Token</button>

    {% block javascripts %}
        {{ encore_entry_script_tags('users') }}
    {% endblock %}
{% endblock %}