{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center my-3">Setup your password</h1>

    <div class="loader d-none">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div id="errorContainer" class="justify-content-center alert alert-danger mb-3 d-none"></div>
    <div id="successContainer" class="justify-content-center alert alert-success mb-3 d-none"></div>
    <div id="infoContainer" class="justify-content-center alert alert-info mb-3 d-none"></div>

    <form id="createPasswordForm" method="post" action="{{ path('activateAccount', app.request.attributes.get('_route_params')) }}">
        <div class="form-group">
            <label for="passwordInput1">Password</label>
            <input type="password" class="form-control" id="passwordInput1" placeholder="Password" required>
        </div>

        <div class="form-group">
            <label for="passwordInput2">Re-type Password</label>
            <input type="password" class="form-control" id="passwordInput2" placeholder="Re-type Password" required>
        </div>
        <button type="submit" id="activateAccountSubmitButton" class="btn btn-primary">Create Password</button>
    </form>


    {% block javascripts %}
        {{ encore_entry_script_tags('users') }}
    {% endblock %}
{% endblock %}